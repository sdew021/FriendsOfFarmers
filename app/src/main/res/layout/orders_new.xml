<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/cropname"
            android:fontFamily="@font/expletus_sans_medium_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cropquantity"
            android:fontFamily="@font/expletus_sans_medium_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cropname" />

        <TextView
            android:id="@+id/cropPrice"
            android:fontFamily="@font/expletus_sans_medium_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cropquantity" />

        <TextView
            android:id="@+id/address"
            android:fontFamily="@font/expletus_sans_medium_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cropPrice" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>