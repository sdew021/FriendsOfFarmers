        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/expletus_sans_medium_italic"
                    android:textColor="@color/blue"
                    android:textSize="22sp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="enter the name here"
                        android:fontFamily="@font/expletus_sans_medium_italic"

                        android:textColor="@color/black"
                        android:background="@drawable/edittext_back"
                        android:textSize="20sp"
                        />
                </HorizontalScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/expletus_sans_medium_italic"
                    android:text="Contact No."
                    android:textColor="@color/blue"
                    android:textSize="22sp"/>

                <HorizontalScrollView
                    android:id="@+id/userContact1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userContact"
                        android:inputType="number"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/expletus_sans_medium_italic"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:hint="enter the number here"
                        android:background="@drawable/edittext_back"
                        android:textSize="20sp" />
                </HorizontalScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/expletus_sans_medium_italic"
                    android:text="Email"
                    android:textColor="@color/blue"
                    android:textSize="22sp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/expletus_sans_medium_italic"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:hint="enter the email here"
                        android:background="@drawable/edittext_back"
                        android:textSize="20sp" />
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/expletus_sans_medium_italic"
                    android:text="Current Address"
                    android:textColor="@color/blue"
                    android:textSize="22sp"/>

                <HorizontalScrollView
                    android:id="@+id/userAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/expletus_sans_medium_italic"

                        android:textColor="@color/black"
                        android:hint="enter the current address here"
                        android:background="@drawable/edittext_back"
                        android:textSize="20sp" />tools:context=".MainActivity"
                </HorizontalScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/expletus_sans_medium_italic"
                    android:layout_height="wrap_content"
                    android:text="Parmanent Address"
                    android:textColor="@color/blue"
                    android:textSize="22sp"/>

                <HorizontalScrollView
                    android:id="@+id/userPermanent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userPermanent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/expletus_sans_medium_italic"
                        android:background="@drawable/edittext_back"
                        android:textColor="@color/black"
                        android:hint="enter the permanent address here"
                        android:textSize="20sp" />
                </HorizontalScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"></View>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_bg1"
                android:fontFamily="@font/expletus_sans_medium_italic"
                android:onClick="save_details"
                android:text="Save Details"
                android:textColor="@color/black"
                android:textSize="20dp"
                />

        </LinearLayout>



</LinearLayout>
</ScrollView>