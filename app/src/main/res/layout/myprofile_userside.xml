<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondActivity">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <View
        android:layout_width="match_parent"
        android:layout_height="735dp"
        android:background="@drawable/gradient1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/farmer_icon_app"
                android:layout_centerHorizontal="true"
                android:elevation="1dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <android.support.v7.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="85dp"

                       app:contentPaddingTop="15dp"
                       app:contentPaddingRight="15dp"
                       app:contentPaddingLeft="15dp"
                       app:contentPaddingBottom="15dp"
                       app:cardCornerRadius="10dp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <EditText
                               android:id="@+id/userName"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:hint="Enter Name"
                               android:textColor="@color/blue"
                               android:textStyle="bold"
                               android:textSize="25sp"
                               android:layout_marginTop="60dp"
                               android:layout_gravity="center_horizontal"/>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:layout_marginTop="20dp"
                               android:paddingVertical="10dp">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:fontFamily="@font/expletus_sans_medium_italic"
                                   android:text="Contact No."
                                   android:textColor="@color/blue"
                                   android:textSize="18sp"/>

                               <HorizontalScrollView
                                   android:id="@+id/userContact1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <EditText
                                       android:id="@+id/userContact"
                                       android:inputType="number"
                                       android:layout_width="wrap_content"
                                       android:fontFamily="@font/expletus_sans_medium_italic"
                                       android:layout_height="wrap_content"

                                       android:textColor="@color/black"
                                       android:hint="enter the number here"
                                       android:background="@drawable/edittext_back"
                                       android:textSize="18sp" />
                               </HorizontalScrollView>
                               <View
                                   android:layout_width="match_parent"
                                   android:layout_height="1dp"
                                   android:layout_marginTop="10dp"
                                   android:background="@color/black"></View>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical"
                                   android:paddingVertical="10dp">
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:fontFamily="@font/expletus_sans_medium_italic"
                                       android:text="Email"
                                       android:textColor="@color/blue"
                                       android:textSize="18sp"/>
                                   <HorizontalScrollView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">

                                       <EditText
                                           android:id="@+id/userEmail"
                                           android:layout_width="wrap_content"
                                           android:fontFamily="@font/expletus_sans_medium_italic"
                                           android:layout_height="wrap_content"

                                           android:textColor="@color/black"
                                           android:hint="enter the email here"
                                           android:background="@drawable/edittext_back"
                                           android:textSize="18sp" />
                                   </HorizontalScrollView>

                                   <View
                                       android:layout_width="match_parent"
                                       android:layout_height="1dp"
                                       android:layout_marginTop="10dp"
                                       android:background="@color/black"></View>
                               </LinearLayout>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical"
                                   android:paddingVertical="10dp">
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:fontFamily="@font/expletus_sans_medium_italic"
                                       android:text="Current Address"
                                       android:textColor="@color/blue"
                                       android:textSize="18sp"/>

                                   <HorizontalScrollView
                                       android:id="@+id/userAddress1"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">

                                       <EditText
                                           android:id="@+id/userAddress"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/expletus_sans_medium_italic"

                                           android:textColor="@color/black"
                                           android:hint="enter the current address here"
                                           android:background="@drawable/edittext_back"
                                           android:textSize="18sp" />tools:context=".MainActivity"
                                   </HorizontalScrollView>
                                   <View
                                       android:layout_width="match_parent"
                                       android:layout_height="1dp"
                                       android:layout_marginTop="10dp"
                                       android:background="@color/black"></View>
                               </LinearLayout>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical"
                                   android:paddingVertical="10dp">
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:fontFamily="@font/expletus_sans_medium_italic"
                                       android:layout_height="wrap_content"
                                       android:text="Parmanent Address"
                                       android:textColor="@color/blue"
                                       android:textSize="18sp"/>

                                   <HorizontalScrollView
                                       android:id="@+id/userPermanent1"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">

                                       <EditText
                                           android:id="@+id/userPermanent"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/expletus_sans_medium_italic"
                                           android:background="@drawable/edittext_back"
                                           android:textColor="@color/black"
                                           android:hint="enter the permanent address here"
                                           android:textSize="18sp" />
                                   </HorizontalScrollView>
                                   <View
                                       android:layout_width="match_parent"
                                       android:layout_height="1dp"
                                       android:layout_marginTop="10dp"
                                       android:background="@color/black"></View>
                               </LinearLayout>

                           </LinearLayout>

                       </LinearLayout>

                   </android.support.v7.widget.CardView>



                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/expletus_sans_medium_italic"
                           android:text="Edit Details"
                           android:onClick="edit"
                           android:textColor="@color/black"
                           android:padding="10dp"
                           android:textSize="20dp"
                           android:layout_margin="10dp"
                           android:background="@drawable/button_bg1"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="10dp"
                           android:layout_marginLeft="40dp"
                           android:layout_gravity="center"
                           android:background="@drawable/button_bg1"
                           android:fontFamily="@font/expletus_sans_medium_italic"
                           android:onClick="save_details"
                           android:text="Save Details"
                           android:textColor="@color/black"
                           android:textSize="20dp"/>

                   </LinearLayout>


               </LinearLayout>

        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>
</ScrollView>